{
  "autorun": true,
  "terminals": [
    {
      "name": "bash",
      "description": "Regular terminal",
      "focus": true
    },
    {
      "name": "Server",
      "description": "Flask back-end",
      "commands": [
        "conda activate wvi",
        "cd server",
        "python3 app.py"
      ]
    },
    {
      "name": "Client",
      "description": "Vue front-end",
      "commands": [
        "cd client",
        "yarn serve"
      ]
    },
    {
      "name": "TestGet",
      "description": "Terminal to test API GET",
      "commands": [
        "conda activate wvi",
        "cd server"
      ]
    },
    {
      "name": "TestPost",
      "description": "Terminal to test API POST",
      "commands": [
        "conda activate wvi",
        "cd server"
      ]
    }
  ]
}